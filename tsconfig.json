{
  "compilerOptions": {
    /* Alias */
    "baseUrl": ".",
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@/*": [".*"],
      "@/assets/*": ["./src/assets/*"],
      "@/convex/*": ["./convex/*"],
      "@/docs/*": ["./stories/__docs__/*"],
      "@/sbconfig/*": ["./.storybook/*"],
      "@/shadcn/*": ["./src/shadcn/*"],
      "@/src/*": ["./src/*"],
      "@/stories/*": ["./stories/*"],
    },
    "jsx": "preserve",
    "strict": true,
  },
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ]
}